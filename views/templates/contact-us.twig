{% extends "base.twig" %}

{% block content %}
<div class="container mx-auto px-4 py-8 animate__animated animate__fadeIn animate__delay-3s">
    <h1 class="text-4xl text-center font-medium mb-8 text-light-p10">Contact Us</h1>
    <div class="flex flex-wrap -mx-4">
       
        <div class="w-full md:w-1/2 lg:w-1/3 px-4 mb-4 md:mb-0 contact-info text-light-p10">
            <div class="bg-white shadow-md rounded p-6">
                <h2 class="text-xl font-semibold mb-4 ">Get in Touch</h2>
                <div class="mb-4">
                    <strong>Address:</strong>
                    <br>{{ site.address }}
                </div>
                <div class="mb-4">
                    <strong>Number:</strong>
                    <br>{{ site.phone }}
                </div>
                <div class="mb-4">
                    <strong>Email:</strong>
                    <br>{{ site.email }}
                </div>
                <div class="mb-4">
                    <strong>Business Hours:</strong>
                    <br>
                    <div>{{ site.business_hours_weekdays }}</div>
                    <div>{{ site.business_hours_weekend }}</div>
                </div>
            </div>
        </div>

        
        <div class="w-full md:w-1/2 lg:w-2/3 px-4 contact-form">
            <div class="bg-white shadow-md rounded p-6">
                <form id="contactForm" class="space-y-4" action="/wp-content/themes/travel-explore/send-email.php" method="post">
                <div>
                    <label for="fullName" class="block text-sm font-medium text-light-p10">Full Name</label>
                    <input type="text" id="fullName" name="fullName" required class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500">
                </div>
                <div>
                    <label for="email" class="block text-sm font-medium text-light-p10">Email</label>
                    <input type="email" id="email" name="email" required pattern="[a-z0-9._%+\-]+@[a-z0-9.\-]+\.[a-z]{2,}$" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500">
                </div>
                <div>
                    <label for="subject" class="block text-sm font-medium text-light-p10">Subject</label>
                    <input type="text" id="subject" name="subject" required class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500">
                </div>
                <div>
                    <label for="message" class="block text-sm font-medium text-light-p10">Message</label>
                    <textarea id="message" name="message" required rows="4" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500"></textarea>
                </div>
                <input type="hidden" name="smtp_username" value="{{ site.smtp_username }}">
                <input type="hidden" name="smtp_password" value="{{ site.smtp_password }}">
                {% for email in site.recipient_emails %}
                    <input type="hidden" name="recipient_emails[]" value="{{ email.email }}">
                {% endfor %}
                <div>
                    <button type="submit" class="w-full flex justify-center py-2 px-4 border rounded-md shadow-sm text-sm font-medium hover:bg-transparent hover:text-light-p40 rounded-full border hover:border-light-p40 text-center bg-light-p40 text-white-100">Submit</button>
                </div>
            </form>

            </div>
            <div id="messageContainer" class="hidden"></div>
        </div>
    </div>

    <div class="container mx-auto px-4 py-8">
        <div id="map" class="w-full h-96" latitude="{{ latitude }}" longitude="{{ longitude }}"></div>
    </div>
</div>
{% endblock %}
