{% extends "base.twig" %}

{% block content %}
    <h1 class="text-xl md:text-2xl font-roboto font-semibold text-center w-full md:w-3/4 mx-auto">{{ title }}</h1>
    <div class="flex mx-auto px-4 2xl:px-0 max-w-screen-lg">
    <div class="space-y-6 pb-16 pt-8 px-6 md:px-4">
        {% for post in posts %}
            <div class="bg-white rounded-lg shadow-md overflow-hidden">
                {% if post.thumbnail %}
                    <img src="{{ post.thumbnail.src }}" alt="{{ post.post_title }}" class="w-full h-64 object-cover">
                {% endif %}
                <div class="p-4">
                    <h2 class="text-lg font-semibold line-clamp-2">{{ post.post_title }}</h2>
                    <p class="text-gray-600 line-clamp-2 text-sm mt-2">{{ post.post_content}}</p>
                    <a href="{{ post.link }}" class="lineHeight-20 text-light-p30 hover:underlin mt-2">Read more</a>
                </div>
            </div>
        {% endfor %}
    </div>
    </div>
    
{% endblock %}
